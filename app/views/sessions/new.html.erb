<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-6 border p-3 mt-5">
      <h3>Log-in</h3>
      <%= form_with(url: login_path, scope: :session, class: "col-md-6 col-md-offset-3", local: true) do |form| %>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, { class: "form-control" }%>
        </div>
        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, { class: "form-control" }%>
        </div>
        <%= form.submit "Log-in", { class: "btn btn-primary" } %>
      <% end %>
    </div>
  </div>
</div>